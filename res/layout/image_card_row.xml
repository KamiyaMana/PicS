<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
        >


    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:id="@+id/image_card_row_imageView"
            />


    <!--画像情報部-->
    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/image_card_row_image_filename_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ファイル名"
                android:textSize="12sp"
                android:layout_gravity="left"
                android:padding="6dp"
                />

        <TextView
                android:id="@+id/image_card_row_image_filesize_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ファイルサイズ"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:padding="6dp"
                />



        <TextView
                android:id="@+id/image_card_row_image_uri_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text="ファイルURL"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:padding="6dp"
                />


    </LinearLayout>

</LinearLayout>