<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/instant_downloader_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            />

    <fragment
            android:name="jp.dip.azurelapis.android.PicS.UI.ImageFragment.ImageFragment"
            class="jp.dip.azurelapis.android.PicS.UI.ImageFragment.ImageFragment"
            android:id="@+id/instant_download_image_list_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout="@layout/image_fragment"/>



</LinearLayout>